<html lang='en'>
  <head>
    <title>day1-cp2</title>
    <link rel='stylesheet' href='public/style.css' />

    <!-- Linking bootstrap css cdn -->
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous' />

    <!-- bootstrap icon -->
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css' />
    <!-- Linking Bootstrap Javascript cdn -->
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous'></script>
  </head>
  <body>
    <!-- navbar section -->
    <nav class='navbar navbar-expand-lg navbar-light bg-light' style='height: 7vh'>
      <div class='container'>
        <a class='navbar-brand me-5' href='#'>
          <img src='public/assets/logo.png' alt='' />
        </a>

        <div class='collapse navbar-collapse' id='navbarSupportedContent'>
          <ul class='navbar-nav me-auto mb-2 mb-lg-0'>
            <li class='nav-item'>
              <a class='nav-link active' aria-current='page' href='/home'>Home</a>
            </li>

            <li class='nav-item ms-3'>
              <a class='nav-link' aria-current='page' href='/add-project'>Add Project</a>
            </li>
          </ul>
          <div class='d-flex right justify-content-end'>
            <a href='/contact-me'>Contact Me</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- card Profile section -->
    <section class='bg-secondary'>
      <div class='card mb-3 mx-auto' style='max-width: 80%'>
        <div class='d-flex flex-row-reverse p-5 g-0'>
          <div class='col'>
            <div class='card h-100 rounded-3' style='width: 350px'>
              <img src='/public/assets/myself.jpg' class='card-img-top' alt='...' />
              <h3 class='text-center'>Muhammad Ali Musthofa</h3>
              <p class='card-text text-center pb-2' style='color: grey'>Fullstack developer</p>
            </div>
          </div>
          <div class='col-md-8'>
            <div class='card-body'>
              <h5 class='card-title'>Hi! Wellcome to My Website</h5>
              <p class='card-text my-5'>
                Lorem ipsum dolor, sit amet consectetur adipisicing elit. Deserunt, ullam? Accusantium, corporis. Maiores cupiditate eum minima iusto tempore sapiente dicta porro odit. Incidunt sed nisi voluptatibus atque. Repudiandae optio
                a tempora possimus. Optio voluptas atque tempore ipsum cum repudiandae sequi, voluptates odio. Est accusamus blanditiis minima omnis, doloremque dolore accusantium?
              </p>

              <div class='card-download d-flex text-center my-2' style='color: white'>
                <a class='bg-primary py-2 px-3 rounded-pill text-decoration-none' style='color: white' href=''>Contact</a>
                <a class='bg-success ms-3 py-2 px-3 bi bi-cloud-arrow-down-fill rounded-pill text-decoration-none' href='' style='color: white'>download CV</a>
              </div>

              <div class='socmed d-flex mt-5'>
                <a href=''><img src='/public/assets/facebook.png' alt='' /></a>
                <a href='' class='ms-3'><img src='/public/assets/instagram.png' alt='' /></a>
                <a href='' class='ms-3'><img src='/public/assets/git.png' alt='' /></a>
                <a href='' class='ms-3'><img src='/public/assets/mail.png' alt='' /></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- project section -->
    <section class='bg-white mt-5'>
      <h1 class='text-center mb-5'>My Project</h1>
      {{! card project }}
        {{#each blogs}}
      <div class='d-flex flex-row justify-content-around flex-wrap'>
          <div id='contents-blogs' class='mb-4 ms-3'>
            <div class='card h-100 p-2' style='width: 350px'>
              <img src='/public/assets/ggh.jpg' class='card-img-top' alt='not' />
              <div class='card-body'>
                <h3 class='blog-list text-center '>
                  <a class="text-decoration-none badge-dark "href='/blog-project-detail' target='_blank'>{{this.projectName}}</a>
                </h3>
                <p class='mb-1'>Duration :</p>
                <p class='' style='color: grey'>{{this.duration}}</p>
                <p class='mt-3'>{{this.description}}</p>
                {{#if isLogin}}
                  <div class='d-flex justify-content-center '>
                    <a href="" class="me-3 border-2 rounded bg-success py-2 px-4 badge text-decoration-none ">Edit</a>
                    <a href="/delete-project/{{@index}}" class="border-2 rounded bg-danger py-2 px-4 text-decoration-none badge ">Delete Project</a>
                  </div>
                {{/if}}
              </div>
            </div>
          </div>
        {{/each}}

      </div>
    </section>
  </body>
</html>