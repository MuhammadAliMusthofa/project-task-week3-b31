<html>
  <head>
    <title>My Project - detail</title>
    <link rel='stylesheet' href='style.css' />
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css' />
  </head>
  <body>
    <!-- NavBar -->
    <nav>
      <div class='left'>
        <a href='index.html'>
          <img src='assets/logo.png' alt='' />
        </a>

        <ul>
          <li>
            <a href='/home'>Home</a>
          </li>

          <li>
            <a href='/add-project'>My Project</a>
          </li>
        </ul>
      </div>

      <div class='right'>
        <a href='/contact'>Contact Me</a>
      </div>
    </nav>

    <!-- Blog -->
    <div class='blog-detail'>
      <h1>{{blog.projectName}}</h1>
      <div class='blog-detail-container'>
        <div class='blog-detail-left'>
          <img src='assets/webap.jpeg' alt='detail' />
        </div>

        <div class='blog-detail-right'>
          <div class='upside'>
            <h3>Duration</h3>
            <p id='duration' class='bi bi-calculator'>5 Jan 2022 - 5 Feb 2002</p>

            <p id='time' class='bi bi-clock-fill'>1 month</p>
          </div>

          <div class='downside'>
            <h3>Technologies</h3>
            <div><img src='assets/reactjs.jpeg' alt='#' /> React Js <img src='assets/nodejslogo.jpeg' alt='#' />Node Js</div>
            <div><img src='assets/nextjslogo.png' alt='#' /> Next Js <img src='assets/soc.png' alt='#' />Socket io</div>
          </div>
        </div>
      </div>

      <div class='desc'>
        <p>
          {{blog.description}}
        </p>
      </div>
    </div>

    <script src='detail.js'></script>
  </body>
</html>